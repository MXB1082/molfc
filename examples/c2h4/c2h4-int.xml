<!-- Input for Franck-Condon calculation -->

<input>

  <system>

    <state id="S0" >
      <molecule id="c2h4">
        <structure nat="6">
          <file type="gaussian" path="./"> c2h4_s0_D2.out  </file>
        </structure>
        <normal_modes  massw=".false.">
          <file type="gaussian" path="./"> c2h4_s0_D2.out </file>
        </normal_modes>
      </molecule>
    </state>

    <state id="S1" >
      <molecule id="c2h4">
        <structure nat="6">
          <file type="gaussian" path="./"> c2h4_s1_D2.out  </file>
        </structure>
        <normal_modes massw=".false." >
          <file type="gaussian" path="./"> c2h4_s1_D2.out  </file>
        </normal_modes>
      </molecule>
    </state>

  </system>

  <proc>
	<reorder state="S0" molecule="c2h4" data="vibrations">
	  4 6 8 10 7 9 1 2 12 3 5 11
	</reorder>
	<reorder state="S1" molecule="c2h4" data="vibrations">
	  4 7 8 10 6 9 1 5 12 2 3 11
	</reorder>
  </proc>

  <job>
        <transform molecule="c2h4" coord="internal" axsw="on">
            <internal_coordinates nintc="12">
              <coord type="s"> 1 2 </coord>
              <coord type="s"> 1 5 </coord>
              <coord type="s"> 1 6 </coord>
              <coord type="s"> 2 3 </coord>
              <coord type="s"> 2 4 </coord>
              <coord type="b"> 3 2 1 </coord>
              <coord type="b"> 4 2 1 </coord>
              <coord type="b"> 5 1 2 </coord>
              <coord type="b"> 6 1 2 </coord>
              <coord type="w"> 2 5 6 1 </coord>
              <coord type="w"> 1 3 4 2 </coord>
              <coord type="t"> 1 2 </coord>
            </internal_coordinates>
        </transform>

        <fc bra="S0" ket="S1" printfc=".true." ftol="1.0e-4" pert=".true." order="1">
      	  <spectrum file="fc.dat" emin="0.0" emax="2000.0" tol="1.0e-5" />
      	  <active state="S1">
	    <vibration id="4,7" nq="50" />
	  </active>
        </fc>

    </job>

</input>

